<div class="story-component">
  <div class="meta">
    <div class="priority"
      onclick={{action @onPriorityClick @story.necessity}}>
    {{ @story.necessity }}
    </div>
    <div class="tags">
      {{#each @story.tags key="@index" as |tag|}}
        <div class="tag" onclick={{action @onTagClick tag}}>
          {{tag}}
        </div>
      {{/each}}
    </div>
  </div>

  <p class="phrase">
    <span class="marker">As {{ a }}</span>
    <span class="information">{{ @story.as_a }},</span>
  </p>

  <p class="phrase">
    <span class="marker">I want</span>
    <span class="information">{{ @story.i_want }}</span>
  </p>

  <p class="phrase">
    <span class="marker">so that</span>
    <span class="information">{{ @story.so_that }}{{ period }}</span>
  </p>

  {{#if @story.note}}
    <div class="notes">
      {{ @story.note }}
    </div>
  {{/if}}
</div>
